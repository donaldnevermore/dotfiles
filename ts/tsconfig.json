{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "outDir": "out",
    "sourceMap": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true,
    "allowJs": true,
    "skipLibCheck": true,
    "importHelpers": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "jsx": "react-jsx"
  },
  "include": ["src"]
}
